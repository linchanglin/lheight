.weui-tabbar {
    height: 45px;
}
.weui-tabbar__item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.weui-tabbar .image-comment {
  width: 26px;
  height: 26px;
  /*margin-right: 5px;*/
  padding: 0 2.5px;
}

.weui-tabbar__label {
  color: #000;
  font-size: 17px;
  padding: 0 2.5px;
}

.shareButton1 {
  width: 100%;
  height: 45px;
  border: 0px solid #fff;
  border-radius: 0;
  background-color: rgba(247, 247, 250, 0.95);
  display: flex;
  justify-content: center;
  align-items: center;
}
.shareButton1::after {
  border: 0px solid #fff;
  border-radius: 0;
}
.button-hover {
  background-color: #ececec;
  color: #000000;
}