.replies {
  padding-top: 8px;
}

.replies .item {
  display: flex;
  position: relative;
  padding: 10px 15px 0 18px;
  background-color: #fff;
  font-size: 14px;
}

.i-right {
  width: 100%;
  border-bottom: 1px solid #edecf2;
  /*border-bottom: 0.5px solid #bbbbbb;*/
}

.replies .c-u-img {
  width: 37px;
  height: 37px;
  border-radius: 50%;
  margin-right: 8px;
}

.item .top {
  display: flex;
  justify-content: space-between;
}

.replies .item .u-name {
  color: #6633CC;
}

.item .time {
  color: #888;
  font-size: 13px;
}

.replies .item .content {
  margin: 0 0 5px 0;
  word-break: break-all;
}

.flex_column {
  display: flex;
  flex-direction: column;
}

.reply_image_box {
  display: flex;
  font-size: 12.5px;
}

.reply_image1 {
  width: 19px;
  height: 19px;
  padding: 0 5px 10px;
}

.reply_image2 {
  width: 19px;
  height: 19px;
  padding: 0 0 10px 10px;
}

.no_border_bottom {
  border-bottom: 0px solid #edecf2;
}

.replies  .weui-cell_active {
  background-color: #ececec;
}
