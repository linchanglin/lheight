page {
  background-color: #edecf2;
}

.image-comment {
  width: 20px;
  height: 20px;
  margin-right: 5px;
  vertical-align: middle;
  float: none;
}

.comments {
  padding-top: 8px;
}

.content {
  margin: 0 0 12px 0;
  word-break: break-all;
  font-size: 15px;
}

.item {
  display: flex;
  position: relative;
  padding: 12px 15px 0;
  background-color: #fff;
  /*margin-bottom: 1px;*/
}

.i-right {
  width: 100%;
  border-bottom: 1px solid #edecf2;
}

.c-u-img {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  margin-right: 8px;
}

.item .top {
  display: flex;
  justify-content: space-between;
  /*margin-bottom: 3px;*/
}

.item .u-name {
  color: deepskyblue;
  font-size: 14px;
}

.item .time {
  color: #888;
  font-size: 12px;
}

.comment_icon_right {
  width: 20px;
  height: 20px;
}

.comment_content {
  margin: 5px 0 8px 0;
}

.comment_reply {
  color: #66c;
  font-size: 13px;
  padding: 5px 8px;
  background-color: #f8f8f8;
  border-radius: 5px;
}

.comment_reply_hover_class {
  background-color: #bbb;
}

.ripple {
  animation-duration: 1s;
  animation-fill-mode: both;
}

@keyframes bounceIn {
  from, 20%, 40%, 60%, 80%, to {
    animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
  }

  0% {
    opacity: 0;
    transform: scale3d(0.3, 0.3, 0.3);
  }

  20% {
    transform: scale3d(1.1, 1.1, 1.1);
  }

  40% {
    transform: scale3d(0.9, 0.9, 0.9);
  }

  60% {
    opacity: 1;
    transform: scale3d(1.03, 1.03, 1.03);
  }

  80% {
    transform: scale3d(0.97, 0.97, 0.97);
  }

  to {
    opacity: 1;
    transform: scale3d(1, 1, 1);
  }
}

.bounceIn {
  animation-name: bounceIn;
}

.sendMessage {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px;
  border-top: 1px solid #ccc;
  /*background-color: #ececec;*/
  background-color: #edecf2;
}

.inputMsg {
  flex: 2;
  padding: 3px 6px;
  background-color: #ffffff;
  font-size: 14px;
  border-radius: 5px;
}
