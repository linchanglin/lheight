<view class="page">
  <view class="page__bd">
    <scroll-view scroll-y="true" style="height: {{wh}}px" scroll-with-animation="" scroll-into-view="{{toView}}">

      <!--评论列表-->
      <view class="comments">
        <view class="item touch-active">
          <view class="i-left">
            <image class="c-u-img" src="{{comment.userInfo.avatarUrl}}" data-userId="{{comment.userInfo.id}}" catchtap="navigateToProfileShow"></image>
          </view>
          <view class="i-right no_border_bottom">
            <view class="top">
              <view>
                <view class="u-name" data-userId="{{comment.userInfo.id}}" catchtap="navigateToProfileShow">{{comment.userInfo.nickName}}</view>
                <view class="time">{{comment.created_at}}</view>
              </view>
              <view style="display: flex;font-size: 13px;">
                <image wx:if="{{comment.if_my_praise == 0}}" class="ripple {{comment.id == selected_comment_id ? 'bounceIn':''}}" style="width: 19px; height: 19px; padding: 0 5px 10px;" src="../images/praise.png" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}"
                  catchtap="praiseComment"></image>
                <image wx:if="{{comment.if_my_praise == 1}}" class="ripple {{comment.id == selected_comment_id ? 'bounceIn':''}}" style="width: 19px; height: 19px; padding: 0 5px 10px;" src="../images/praise_fill.png" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}"
                  catchtap="praiseComment"></image>
                <text wx:if="{{comment.praise_nums > 0}}" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}" catchtap="praiseComment">{{comment.praise_nums}}</text>
                <image class="" style="width: 19px; height: 19px; padding: 0 0 10px 10px" src="../images/comment.png" data-userId="{{comment.userInfo.id}}" data-commentId="{{comment.id}}" catchtap="navigateToReplyInput"></image>
              </view>
            </view>

            <!--评论内容-->
            <view class="content">
              <view class="comment_content">{{comment.content}}</view>
            </view>
          </view>
        </view>
      </view>
      <view class="replies">
        <block wx:for="{{replies}}" wx:for-item="reply" wx:key="id">
          <view class="item touch-active"  data-replyUserId="{{reply.userInfo.id}}" data-replyUserNickName="{{reply.userInfo.nickName}}" data-replytId="{{reply.id}}" data-replyContent="{{reply.content}}" catchtap="showReplyActionSheet">
            <view class="i-left">
              <image class="c-u-img" src="{{reply.userInfo.avatarUrl}}" data-userId="{{reply.userInfo.id}}" catchtap="navigateToProfileShow"></image>
            </view>
            <view class="i-right {{last_reply_id == reply.id ? 'no_border_bottom': ''}}">
              <view class="top">
                <view>
                  <view class="u-name" data-userId="{{reply.userInfo.id}}" catchtap="navigateToProfileShow">{{reply.userInfo.nickName}}</view>
                  <view class="time">{{reply.created_at}}</view>
                </view>
                <view style="display: flex;font-size: 12px;">
                  <image wx:if="{{reply.if_my_praise == 0}}" class="ripple {{reply.id == selected_reply_id ? 'bounceIn':''}}" style="width: 18px; height: 18px; padding: 0 0 10px 10px;" src="../images/praise.png" data-replyId="{{reply.id}}" data-replyIfMyPraise="{{reply.if_my_praise}}"
                    catchtap="praiseReply"></image>
                  <image wx:if="{{reply.if_my_praise == 1}}" class="ripple {{reply.id == selected_reply_id ? 'bounceIn':''}}" style="width: 18px; height: 18px; padding: 0 0 10px 10px;" src="../images/praise_fill.png" data-replyId="{{reply.id}}" data-replyIfMyPraise="{{reply.if_my_praise}}"
                    catchtap="praiseReply"></image>
                  <text wx:if="{{reply.praise_nums > 0}}"  style="padding-left: 5px" data-replyId="{{reply.id}}" data-replyIfMyPraise="{{reply.if_my_praise}}" catchtap="praiseReply">{{reply.praise_nums}}</text>
                </view>
              </view>

              <!--评论内容-->
              <view class="content">
                <view  wx:if="{{reply.objectUserInfo.id != comment.userInfo.id}}"   class="comment_content">
                <text>回复</text>
                <text style="color: #66c">@{{reply.objectUserInfo.nickName}}</text><text>:  {{reply.content}}</text>
                </view>
                 <view wx:else class="comment_content">{{reply.content}}</view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
    <view class="sendReply">
      <textarea placeholder="回复评论" auto-height="true" fixed="true" maxlength="-1" class="inputReply" value="{{inputReply}}" cursor-spacing="50" bindconfirm="sendReply" />
    </view>
  </view>
</view>