<view class="page">
  <view class="page__bd">
    <scroll-view scroll-y="true" style="height: {{wh}}px" scroll-with-animation="" scroll-into-view="{{toView}}">

      <!--评论列表-->
      <view class="comments">
        <view class="item touch-active" data-commentUserNickName="{{comment.userInfo.nickName}}" data-commentContent="{{comment.content}}" catchtap="showCommentActionSheet">
          <view class="i-left">
            <image class="c-u-img" src="{{comment.userInfo.avatarUrl}}" data-userId="{{comment.userInfo.id}}" catchtap="navigateToProfileShow"></image>
          </view>
          <view class="i-right" style="border-bottom:0px solid #edecf2;">
            <view class="top">
              <view>
                <view class="u-name" data-userId="{{comment.userInfo.id}}" catchtap="navigateToProfileShow">{{comment.userInfo.nickName}}</view>
                <view class="time">{{comment.created_at}}</view>
              </view>
              <view style="font-size: 13px;">
                <image wx:if="{{comment.if_my_praise == 0}}" class="image-comment ripple {{comment.id == selected_comment_id ? 'bounceIn':''}}" style="width: 18px; height: 18px" src="../images/praise.png" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}"
                catchtap="praiseComment"></image>
                <image wx:if="{{comment.if_my_praise == 1}}" class="image-comment ripple {{comment.id == selected_comment_id ? 'bounceIn':''}}" style="width: 18px; height: 18px" src="../images/praise_fill.png" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}"
                catchtap="praiseComment"></image>
                <text wx:if="{{comment.praise_nums > 0}}">{{comment.praise_nums}}</text>
                <image class="image-comment" style="margin-left: 10px;width: 18px; height: 18px" src="../images/comment.png" data-userId="{{comment.userInfo.id}}" data-commentId="{{comment.id}}" catchtap="navigateToReplyInput"></image>
              </view>
            </view>

            <!--评论内容-->
            <view class="content">
              <view class="comment_content">{{comment.content}}</view>
            </view>
          </view>
        </view>
      </view>
      <view class="comments">
        <block wx:for="{{comment.comment_comments}}" wx:for-item="comment" wx:key="id">
          <view class="item touch-active" data-commentUserNickName="{{comment.userInfo.nickName}}" data-commentContent="{{comment.content}}" catchtap="showCommentActionSheet">
            <view class="i-left">
              <image class="c-u-img" src="{{comment.userInfo.avatarUrl}}" data-userId="{{comment.userInfo.id}}" catchtap="navigateToProfileShow"></image>
            </view>
            <view class="i-right">
              <view class="top">
                <view>
                  <view class="u-name" data-userId="{{comment.userInfo.id}}" catchtap="navigateToProfileShow">{{comment.userInfo.nickName}}</view>
                  <view class="time">{{comment.created_at}}</view>
                </view>
                <view style="font-size: 13px;">
                  <image wx:if="{{comment.if_my_praise == 0}}" class="image-comment ripple {{comment.id == selected_comment_id ? 'bounceIn':''}}" style="width: 18px; height: 18px" src="../images/praise.png" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}"
                  catchtap="praiseComment"></image>
                  <image wx:if="{{comment.if_my_praise == 1}}" class="image-comment ripple {{comment.id == selected_comment_id ? 'bounceIn':''}}" style="width: 18px; height: 18px" src="../images/praise_fill.png" data-commentId="{{comment.id}}" data-commentIfMyPraise="{{comment.if_my_praise}}"
                  catchtap="praiseComment"></image>
                  <text wx:if="{{comment.praise_nums > 0}}">{{comment.praise_nums}}</text>
                </view>
              </view>

              <!--评论内容-->
              <view class="content">
                <view class="comment_content">{{comment.content}}</view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
    <view class="sendMessage">
      <input class="inputMsg" placeholder="回复评论"/>
    </view>
  </view>
</view>