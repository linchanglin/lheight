.img_item {
  width: 48%;
  margin: 1%;
  display: inline-block;
  vertical-align: top;
}

/*弹窗*/

.goods-detail .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999999;
}

.goods-detail .mask {
  background: rgba(0, 0, 0, 0.7);
}

.goodsdetail {
  position: fixed;
  top: 10%;
  width: 80%;
  height: 80%;
  left: 10%;
  background-color: #000;
  z-index: 99999999999999;
  /*border-radius: 10px;*/
  overflow: hidden;
  border-radius: 7px;
}

.banner {
  height: 80%;
  border-radius: 10px;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 10px 10px 0 0;
}

.banner_bottom {
