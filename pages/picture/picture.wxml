<view class="page">
  <view class="page__bd">


    <view class="weui-search-bar">
      <view class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
          <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm="searchInputConfirm" />
          <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
            <icon type="clear" size="14"></icon>
          </view>
        </view>
        <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
          <icon class="weui-icon-search" type="search" size="14"></icon>
          <view class="weui-search-bar__text">搜索</view>
        </label>
      </view>
      <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
    </view>

    <view style="width: {{ww}}px;display: flex;flex-wrap: wrap; justify-content: space-between;">
      <block wx:for="{{pictures}}" wx:key="id">
        <image src="{{item.pictures[0]}}"  mode="aspectFill" style="margin-bottom: 1px;width:{{image_width}}px;height:{{image_width}}px;" data-userId="{{item.id}}" data-imgUrl="{{item.pictures}}" bindtap="showGoodsDetail"></image>
      </block>

    </view>

    <!--goodsdetail start-->
    <view class="goods-detail" hidden="{{!showGoodsDetail}}">
      <view class="mask" bindtap="hideGoodsDetail"></view>
      <view class="goodsdetail ripple {{showName}}">
        <swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="500">
          <swiper-item wx:for="{{imgUrl}}" wx:key="*this">
            <image src="{{item}}" mode="aspectFit"></image>
          </swiper-item>
        </swiper>
        <view class="banner_bottom">
          <view class="title1">{{userInfo.nickName}}</view>
          <view class="title2">{{userInfo.gender_name}}</view>
          <view class="title3">
            <view class="title4">{{userInfo.college_name}} 岁 </view>
            <view class="title5" bindtap="navigateToProfileShow" data-userId="{{userInfo.id}}">查看资料</view>
          </view>
          <view class="title6"></view>
        </view>
      </view>
    </view>
  </view>
</view>