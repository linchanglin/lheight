<view class="page">
    <view class="page__bd">
        <view class="weui-panel"></view>
        <view class="weui-panel weui-panel_access">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea class="weui-textarea" value="{{video_url}}" maxlength="-1" auto-height="true" bindinput="bindContentInput" bindconfirm="confirmInput" auto-focus />
                    </view>
                </view>
            </view>
        </view>

        <view style="margin: 20px 15px">
            <button class="weui-btn" type="primary" bindtap="confirmInput">保存</button>
        </view>
    </view>
</view>