<view class="page">
  <form bindsubmit="saveFormid" report-submit='true'>

    <view class="page__bd">
      <view class="weui-panel weui-panel_access" style="margin-top: 20px">
        <view class="weui-panel__bd">
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__bd">
                <input class="weui-input" maxlength="-1" focus="true" value="{{nickname}}" bindinput="bindContentInput" bindconfirm="confirmInput" />
              </view>
            </view>
          </view>
        </view>
      </view>
      <view style="margin: 20px 15px">
        <button formType="submit" class="weui-btn" type="primary" bindtap="confirmInput">保存</button>
      </view>
    </view>

  </form>
</view>