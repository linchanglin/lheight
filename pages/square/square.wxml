  <view class="page__bd">

    <swiper autoplay="true" indicator-dots='true' indicator-color="rgba(255, 255, 255, .3)" indicator-active-color="#ffffff" circular='true' style='height: 180px'>
        <swiper-item wx:for="{{square_imgs}}" wx:key="*this">
            <image src="{{item}}" mode="aspectFill" style="width:100%;"/>
        </swiper-item>
    </swiper>

