     <view class='tab_hd'>
      <view class='tab_hd_item'>
        <text>{{square_title}}</text>
      </view>
    </view> 

    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
          <view wx:for="{{radios}}" wx:for-item="radio" wx:key="id" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" data-id="{{radio.id}}" bindtap='navigateToArticle'>
              <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                  <image class="weui-media-box__thumb" src="{{radio.img_url}}" />
              </view>
              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                  <view class="weui-media-box__title">{{radio.title}}</view>
                  <view class="weui-media-box__desc">主播：{{radio.author}}</view>
                  <view style="margin-top: 2px;" class="weui-media-box__desc">时长：{{radio.duration}}</view> 
                  
              </view>
          </view>
        
      </view>
