.theme {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 15px;
}
.theme image {
  display: flex;
  height: 100px;
  border-radius: 7px;
  margin-top: 15px;
}

.tab_hd {
  display: flex; 
  height: 44px;
  justify-content: center;
  align-items: center;
  background-color: #f2f2f2;
}
.tab_hd .tab_hd_item {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  width:100%;
  height:100%;
  font-size: 15px;
}
.selected_lab { 
  color: #21b100
}
.weui-media-box__hd_in-appmsg {
  width: 80px;
}
.weui-panel {
  margin-top: 0;
}
.weui-media-box {
  display: flex;
