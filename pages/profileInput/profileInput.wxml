<view class="page">
  <view class="page__bd">

    <view class="weui-panel weui-panel_access" style="margin-top: 20px">
      <view class="weui-panel__bd">
        <view class="weui-cell weui-cell_access" hover="true" hover-class="weui-cell_active" bindtap="navigateToNicknameInput">
          <view class="weui-cell__bd">
            <view style="display: inline-block; vertical-align: middle">头像</view>
          </view>
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{userInfo.avatarUrl}}" />
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
        <view class="weui-cell weui-cell_access" hover="true" hover-class="weui-cell_active" bindtap="navigateToNicknameInput">
          <view class="weui-cell__bd">
            <view style="display: inline-block; vertical-align: middle">名字</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.nickName}}</view>
        </view>
        <view class="weui-cell weui-cell_access" hover="true" hover-class="weui-cell_active" bindtap="navigateToGenderInput">
          <view class="weui-cell__bd">
            <view style="display: inline-block; vertical-align: middle">性别</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.gender_name}}</view>
        </view>
        <view class="weui-cell weui-cell_access" hover="true" hover-class="weui-cell_active" bindtap="navigateToCollegeInput">
          <view class="weui-cell__bd">
            <view style="display: inline-block; vertical-align: middle">学校</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.college_name}}</view>
        </view>
        <view class="weui-cell weui-cell_access" hover="true" hover-class="weui-cell_active" bindtap="navigateToSignatureInput">
          <view class="weui-cell__bd">
            <view style="display: inline-block; vertical-align: middle">个性签名</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access">{{userInfo.college_name}}</view>
        </view>
      </view>
    </view>
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <view class="weui-uploader">
              <view class="weui-uploader__hd">
                <view class="weui-uploader__title">相册</view>
                <view class="weui-uploader__info">{{files.length}}/9</view>
              </view>
              <view class="weui-uploader__bd">
                <block wx:for-items="{{files}}" wx:key="{{index}}">
                  <view class="weui-uploader__file weui-uploader__file_statuss">
                    <image class="weui-uploader__img" src="{{item}}" bindtap="previewImage" id="{{item}}" mode="aspectFill" />
                    <view class="weui-uploader__file-contentt">
                      <icon type="clear" size="20" data-image="{{item}}" bindtap="deleteImage"></icon>
                    </view>
                  </view>
                </block>
                <view class="weui-uploader__input-box">
                  <view class="weui-uploader__input" bindtap="chooseImage"></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>

  </view>
</view>