    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_access" hover="true" bindtap="navigateToProfileShow" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image wx:if="{{userInfo.gender == 1}}" src="../images/actor_male.png" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
              <image wx:else src="../images/actor_female.png" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
            </view>
            <view class="weui-cell__bd">
              <view style="display: inline-block; vertical-align: middle">详细信息</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_access" hover="true" bindtap="navigateToProfileShowInput" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="../images/edit_profileShow.png" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
            </view>
            <view class="weui-cell__bd">
              <view style="display: inline-block; vertical-align: middle">修改信息</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_access" hover="true" bindtap="navigateToMyLove" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="../images/lovestore.png" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
            </view>
            <view class="weui-cell__bd">
              <view style="display: inline-block; vertical-align: middle">我的表白</view>
              <view class="weui-badge" style="margin-left: 5px;">8</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
          
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_access" hover="true" bindtap="navigateToLoveInput" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="../images/love.png" style="margin-right: 10px;vertical-align: middle;width:25px; height: 25px;"></image>
            </view>
            <view class="weui-cell__bd">
              <view style="display: inline-block; vertical-align: middle">发表表白</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
        </view>
      </view>
    </view>

  </view>
</view>