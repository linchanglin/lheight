page {
  /*background-color: #eee;*//*background-color: #fbf7ed;*/
  background-color: #edecf2;
}

.list-item:first-child {
  margin-top: 0;
}

.item-header {
  overflow: hidden;
}

.header-img {
  float: left;
  width: 43px;
  height: 43px;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
  margin-top: 2px;
}

.img {
  width: 100%;
  height: 100%;
}

.header-name {
  font-size: 16px;
  color: #ff8140;
}

.header-time {
  display: block;
  font-size: 14px;
  color: #9e9e9e;
}

.list-item {
  background-color: #fff;
  margin: 10px 0 1px 0;
  padding: 10px;
  color: #000;
  font-size: 16px;
  line-height: 150%;
}

.weui-flex {
  background-color: #fff;
  padding: 0;
  font-size: 14px;
}

.article-content {
  margin-top: 5px;
}

.article-imgs {
  margin-top: 5px;
}

.flex_center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex_center_item {
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon_size {
  width: 20px;
  height: 20px;
}

.weui-flex__item image {
  padding: 0 2.5px;
}
.weui-flex__item text {
  padding: 0 2.5px;
}

@import "../../utils/common_css/ripple-bounceIn.wxss";

.weui-toptips_notice1 {
  background-color: #ff8140;
}

.weui-toptips_notice2 {
  background-color: #ffba07;
}

.weui-toptips {
  padding: 6.3px;
  font-size: 16px;
}

.weui-cell_active {
  background-color: #ececec;
}

.page__bd {
  padding-bottom: 0px;
}

.weui-loadmore {
  margin: 25px 0 0;
  font-size: 16px;
}

.reach_loading {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 1px 0 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  font-size: 16px;
}

.page_no_data {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 1px 0 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
}

button[size="mini"] {
  float: right;
  display: inline-block;
  line-height: 1.78;
  font-size: 13px;
  padding: 0 8px;
  margin: 0;
}
