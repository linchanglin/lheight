.nav {
  height: 44px;
  line-height: 44px;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 10px;
}

.nav-list {
  padding: 13px 20px;
}

.act {
  border-bottom: 1px solid #000;
}

.item-header {
  overflow: hidden;
}

.header-img {
  float: left;
  width: 43px;
  height: 43px;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
  margin-top: 2px;
}

.img {
  width: 100%;
  height: 100%;
}

.header-name {
  /*display: block;*/
  font-size: 16px;
  color: #ff8140;
}

.header-time {
  display: block;
  font-size: 14px;
  color: #9e9e9e;
}

.scroll-box {
  height: 700px;
  background-color: #eee;
}

.item-body {
  padding: 8px 0;
}

.list-item {
  background-color: #fff;
  margin: 10px 0;
  padding: 10px;
  color: #000;
  font-size: 16px;
  line-height: 150%;
  border-bottom: 3px solid #e7e7e7;
}

.body-img {
  margin-top: 8px;
  display: block;
  width: 100%;
}

.article-imgs {
  display: inline-block;
  height: auto;
  margin: 3px 0;
}

image {
  float: left;
}

