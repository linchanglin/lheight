page {
  /*background-color: #eee;*//*background-color: #fbf7ed;*/
  background-color: #edecf2;
}

.list-item:first-child {
  margin-top: 0;
}

.nav {
  height: 44px;
  line-height: 44px;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 10px;
}

.nav-list {
  padding: 13px 20px;
}

.act {
  border-bottom: 1px solid #000;
}

.item-header {
  overflow: hidden;
}

.header-img {
  float: left;
  width: 43px;
  height: 43px;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  overflow: hidden;
  margin-right: 10px;
  margin-top: 2px;
}

.img {
  width: 100%;
  height: 100%;
}

.header-name {
  /*display: block;*/
  font-size: 16px;
  color: #ff8140;
}

.header-time {
  display: block;
  font-size: 14px;
  color: #9e9e9e;
}

.scroll-box {
  height: 700px;
  background-color: #eee;
}

.item-body {
  margin: 8px 0;
}

.list-item {
  background-color: #fff;
  margin: 10px 0 1px 0;
  padding: 10px;
  color: #000;
  font-size: 16px;
  line-height: 150%;
  /*border-bottom: 3px solid #e7e7e7;*/
}

.weui-flex {
  background-color: #fff;
  /*padding: 3px 0;*/
  padding: 0;
}

.body-img {
  margin-top: 8px;
  display: block;
  width: 100%;
}

.article-imgs {
  display: inline-block;
  height: auto;
  margin: 3px 0;
}

image {
  float: left;
}

.item-body, .list-item {
  padding-bottom: 1.5px;
}

.placeholder {
  /*margin: 5px;*//*padding: 0 10px;*/
  text-align: center;
  /*background-color: #EBEBEB;*/
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  /*background-color: #F7F7FA;*/
}

.image-comment {
  width: 20px;
  height: 20px;
  vertical-align: middle;
  float: none;
}

.weui-flex text {
  padding-left: 5px;
}

@import "../../utils/common_css/ripple-bounceIn.wxss";

.weui-toptips_notice1 {
  background-color: #ff8140;
}

.weui-toptips_notice2 {
  background-color: #ffba07;
}

.weui-toptips {
  padding: 6.3px;
  font-size: 16px;
}

.weui-cell_active {
  background-color: #ececec;
}

.page__bd {
  padding-bottom: 0px;
}

.weui-loadmore {
  margin: 25px 0 0;
  font-size: 16px;
}

.reach_loading {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 1px 0 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  font-size: 16px;
}

.page_no_data {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 1px 0 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
}

button[size="mini"] {
  float: right;
  display: inline-block;
  line-height: 1.78;
  font-size: 13px;
  padding: 0 8px;
  margin: 0;
}
