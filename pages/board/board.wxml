    </view>
  </navigator>
</view>
<view class="container">
  <view class="list-item" wx:for="{{reqs}}" wx:key="" wx:for-item="item">
    <navigator url="../comment/comment" hover-class="weui-cell_active">
      <view class="item-header">
        <view class="header-img" bindtap="goToProfileShow">
          <image class="img" src="{{userInfo.avatarUrl}}"></image>
        </view>
        <text class="header-name" bindtap="goToProfileShow">小作宝</text>
        <text class="header-time">{{item.updatetime}}</text>
      </view>
      <view class="item-body">
        <text>{{item.content}}</text>
        <view class="article-imgs" wx:if="{{item.pictures}}">
          <image wx:for="{{item.pictures}}" src="{{item}}" data-pictures="{{item}}"  bindload="onImageLoad" mode="aspectFill" style="width:{{imgCss.width}};height:{{imgCss.height}};margin:{{imgCss.margin}}"></image>

